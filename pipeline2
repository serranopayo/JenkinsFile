 node {
        checkout scm
        stage('Build'){
                echo 'Hola mundo'
                withMaven (
                  maven:'Maven text'
               ){   
                sh 'mvn compile'
                }
        }
        stage('Test'){
                echo 'Testing'
                sh 'mvn test'
                junit '**/target/*.xml'
        }
        stage('Deploy'){
                echo 'Deploying'
                withMaven (
                  maven:'Maven text'
               ){ 
                 sh 'mvn package'
        }
    }
    }
    
